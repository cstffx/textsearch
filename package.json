{
  "name": "cstffx-search",
  "version": "1.0.5",
  "description": "Regular expression builder for JavaScript with search mode options.",
  "main": "lib/TextSearch.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cstffx/textsearch.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "regexp",
    "string",
    "filter",
    "text",
    "search",
    "regular",
    "expression",
    "builder"
  ],
  "author": "Elihú Díaz Álvarez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cstffx/textsearch/issues"
  },
  "homepage": "https://github.com/cstffx/textsearch#readme",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib/**/*"
  ]
}
