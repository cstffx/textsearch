{
  "name": "cstffx-search",
  "version": "1.0.10",
  "description": "Regular expression builder for JavaScript with search mode options.",
  "main": "lib/index.min.js",
  "module": "lib/index.esm.js",
  "browser": "lib/index.umd.js",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cstffx/textsearch.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "regexp",
    "string",
    "filter",
    "text search",
    "regular expression",
    "builder"
  ],
  "author": "Elihú Díaz Álvarez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cstffx/textsearch/issues"
  },
  "homepage": "https://github.com/cstffx/textsearch#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/jest": "^28.1.7",
    "esbuild": "^0.15.5",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib/**/*"
  ]
}
